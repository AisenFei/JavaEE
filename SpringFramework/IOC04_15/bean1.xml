<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="user" class="spring5_1.User"></bean>
    <bean id="student" class="spring5_1.Student">
        <property name="name" value="名字"></property>
        <property name="age" value="18"></property>
    </bean>

    <bean id="people" class="spring5_1.People">
        <constructor-arg name="name" value="小明"></constructor-arg>
        <constructor-arg name="work" value="程序员"></constructor-arg>
    </bean>
</beans>